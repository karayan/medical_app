<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
       <item name="android:windowBackground">@color/background_light_blue</item>
        <item name="android:colorBackground">@color/text_color_light_blue</item>
        <!-- <item name="android:textColor">@color/text_color_light_blue</item> -->
        
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
        <!-- <item name="android:button">@style/btnStyle</item> -->
        <item name="android:radioButtonStyle">@style/MyRadioButton</item>
        
    </style>

    <!-- custom styles -->
    <style name="btnStyle" parent="@android:style/Widget.Button">
       <item name="android:textSize">15sp</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">#FFFFFF</item>
       <item name="android:gravity">center</item>
       <item name="android:shadowColor">#000000</item>
       <item name="android:shadowDx">1</item>
       <item name="android:shadowDy">1</item>
       <item name="android:shadowRadius">0.6</item>
       <item name="android:padding">10dip</item>
   </style>
    
    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
	    <item name="android:textColor">@color/text_color_light_blue</item>
	    <item name="android:layout_height">45dip</item>
	</style>
    
    <style name="MyRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
    	<item name="android:textColor">@color/text_color_light_blue</item>
    	<!-- <item name="android:background">@color/text_color_light_blue</item> -->
	</style>
	
    <!-- urban net -->
    
    <style name="mapView">
        <item name="android:gravity">center</item>
    </style>
    
       <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
    </style>

</resources>
